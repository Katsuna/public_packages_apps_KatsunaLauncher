<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/common_grey50"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_black12" />

        <TextView
            android:id="@+id/settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_settings_black54_24dp"
            android:gravity="center"
            android:minHeight="28dp"
            android:text="@string/common_settings"
            android:textColor="@color/common_black54" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/common_black12" />

        <TextView
            android:id="@+id/delete_apps_menu_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/common_ic_delete_black54_24dp"
            android:gravity="center"
            android:minHeight="28dp"
            android:text="@string/delete_apps"
            android:textColor="@color/common_black54" />

    </LinearLayout>

</android.support.v7.widget.CardView>