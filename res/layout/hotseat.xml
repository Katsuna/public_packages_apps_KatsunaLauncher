<?xml version="1.0" encoding="utf-8"?>
<com.katsuna.launcher.Hotseat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:launcher="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginBottom="50dp"
    android:theme="@style/HomeScreenElementTheme">

    <ImageView
        android:id="@+id/expand_apps"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center|top"
        android:elevation="5dp"
        android:src="@drawable/more_apps" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        launcher:cardBackgroundColor="@color/thick_dark_1"
        launcher:cardCornerRadius="10dp">

        <com.katsuna.launcher.CellLayout
            android:id="@+id/layout"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_gravity="top"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:importantForAccessibility="no"
            launcher:containerType="hotseat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/activities_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_gravity="center|end"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/activities_icon"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/workspace_activity"
                android:textAllCaps="false"
                android:textColor="@color/common_black87"
                android:textSize="14sp" />

            <Button
                android:id="@+id/settings_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_gravity="center|end"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:drawableStart="@drawable/setting_icon"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="@string/common_settings"
                android:textAllCaps="false"
                android:textColor="@color/common_black87"
                android:textSize="14sp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</com.katsuna.launcher.Hotseat>
