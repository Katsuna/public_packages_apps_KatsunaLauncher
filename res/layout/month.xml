<?xml version="1.0" encoding="utf-8"?>
<com.katsuna.launcher.katsuna.calendar.MonthView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.katsuna.launcher.katsuna.calendar.CalendarGridView
        android:id="@+id/calendar_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.katsuna.launcher.katsuna.calendar.CalendarRowView
            android:id="@+id/day_names_header_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp">

            <com.katsuna.commons.controls.KatsunaTextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sizeProfileEnabled="true"
                app:sizeProfileKeyV2="BUTTON" />

            <com.katsuna.commons.controls.KatsunaTextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sizeProfileEnabled="true"
                app:sizeProfileKeyV2="BUTTON" />

            <com.katsuna.commons.controls.KatsunaTextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sizeProfileEnabled="true"
                app:sizeProfileKeyV2="BUTTON" />

            <com.katsuna.commons.controls.KatsunaTextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sizeProfileEnabled="true"
                app:sizeProfileKeyV2="BUTTON" />

            <com.katsuna.commons.controls.KatsunaTextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sizeProfileEnabled="true"
                app:sizeProfileKeyV2="BUTTON" />

            <com.katsuna.commons.controls.KatsunaTextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sizeProfileEnabled="true"
                app:sizeProfileKeyV2="BUTTON" />

            <com.katsuna.commons.controls.KatsunaTextView
                style="@style/CalendarCell.DayHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:sizeProfileEnabled="true"
                app:sizeProfileKeyV2="BUTTON" />
        </com.katsuna.launcher.katsuna.calendar.CalendarRowView>

        <include layout="@layout/week" />

        <include layout="@layout/week" />

        <include layout="@layout/week" />

        <include layout="@layout/week" />

        <include layout="@layout/week" />

        <include layout="@layout/week" />
    </com.katsuna.launcher.katsuna.calendar.CalendarGridView>
</com.katsuna.launcher.katsuna.calendar.MonthView>
