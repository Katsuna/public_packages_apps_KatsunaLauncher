<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="settings_label">
        <item name="android:textSize">@dimen/qsetting_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/common_grey600</item>
    </style>

    <!-- Base Katsuna theme for BubbleTextView -->
    <style name="KatsunaBaseIcon">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">start|center</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textColor">@color/common_black87</item>
        <item name="android:fontFamily">sans-serif</item>

        <!-- No shadows in the base theme -->
        <item name="android:shadowRadius">0</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CalendarCell">
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="CalendarCell.DayHeader">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CalendarCell.CalendarDate">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="WeatherDesc">
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="WeatherTemp">
        <item name="android:textColor">@color/common_white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="KatsunaText" parent="@android:style/TextAppearance">
        <item name="android:letterSpacing">@dimen/common_letter_spacing_v2</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="KatsunaText.Basic">
        <item name="android:textSize">16sp</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textColor">@color/common_black54</item>
    </style>

    <style name="KatsunaText.Basic.Label">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:lines">1</item>
    </style>

    <style name="KatsunaText.Toggle">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="KatsunaText.Toggle.Minified">
        <item name="android:textSize">14sp</item>
        <item name="android:textOn">@string/common_on</item>
        <item name="android:textOff">@string/common_off</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="KatsunaText.Toggle.Expanded">
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textOn">@string/common_on</item>
        <item name="android:textOff">@string/common_off</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_width">@dimen/common_toggle_width_v3</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>


</resources>